<h1>Departments</h1>

<%= link_to "Create new Department", new_department_path %> 


<% @departments.each do |department| %>
  <p><%= department.title %></p>
  <p><%= department.subtitle %></p>
  <p><%= department.body %></p>
  <%= image_tag department.thumb_image unless department.thumb_image.nil? %>
  <%= link_to "Edit", edit_department_path(department.id) %>
<% end %>